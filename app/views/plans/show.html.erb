      <div class="header">
        <%= render "shared/header_top" %>
      </div>  
    </div>  
    <div class="main-wrapper">  
      
      <div class="plan-info">
      <h11>プラン概要</h11>
      <div class="item-plan">
        
        <div class ="item-show">
          
          <%= image_tag @item.image.variant(resize:'250x250') if @item.image.attached? %>
          <h3><%= @item.name %></h3>
        </div>  


        <div class="plan-show">
              
                <table >
              <tbody>
                <tr>
                  <th class="detail-item">広告出稿時期</th>
                  <td class="detail-value"><%= @plan.when %></td>
                </tr>
                <tr>
                  <th class="detail-item">広告出稿期限</th>
                  <td class="detail-value"><%= @plan.when_by %></td>
                </tr>
                <tr>
                  <th class="detail-item">広告担当者</th>
                  <td class="detail-value"><%= @plan.who %></td>
                </tr>
                <tr>
                  <th class="detail-item">出稿場所</th>
                  <td class="detail-value"><%= @plan.where %></td>
                </tr>
                <tr>
                  <th class="detail-item">ターゲット層</th>
                  <td class="detail-value"><%= @plan.target[:name] %></td>
                </tr>
                <tr>
                  <th class="detail-item">広告媒体</th>
                  <td class="detail-value"><%= @plan.media[:name] %></td>
                </tr>
                <tr>
                  <th class="detail-item">広告出稿の理由</th>
                  <td class="detail-value"><%= @plan.why %></td>
                </tr>
              </tbody>
            </table>
         </div>   
        
          
      
       <%= column_chart Plan.group(:item_id).sum(:how_much) %>
      </div> 
      </div>    
    </div>      
  
      

